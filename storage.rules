rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{fileName} {
      // ファイル名からuserIdを抽出（userId.jpg形式）
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && fileName.matches(request.auth.uid + '[.]jpg');
    }
  }
}
